SELECT @@default_storage_engine;

create table users (id int not null auto_increment primary key, username varchar(20) not null, name varchar(50) not null, password varchar(20) not null, registered timestamp not null default current_timestamp on update current_timestamp, unique index `id_unique` (`id` asc), unique index `username_unique` (`username` asc)) engine = innodb default charset = latin5;

insert into users values(NULL, 'kanatsiz', 'abdullah', 'hyftodo', default);

create table lists (id int not null auto_increment, uid int not null, description varchar(100) not null, reminder_date datetime default null, primary key(`id`, `uid`), index `fk_lists_uid` (`uid` asc), constraint `fk_lists_uid` foreign key (`uid`) references `users` (`id`) on delete cascade on update cascade) engine = innodb default charset = latin5;

insert into lists values(NULL, 1, 'weekly', default);

insert into lists values(NULL, 1, 'daily', default), (NULL, 1, 'monthly', default);

create table items(id int not null auto_increment, uid int not null, lid int not null, description varchar(200) not null, status varchar(11) not null default 'uncompleted', primary key (`id`, `uid`, `lid`), index `fk_items_uid` (`uid` asc), index `fk_items_lid` (`lid` asc), constraint `fk_items_lid` foreign key (`lid`) references `lists` (`id`) on delete cascade on update cascade, constraint `fk_items_uid` foreign key (`uid`) references `users` (`id`) on delete cascade on update cascade) engine = innodb default charset = latin5;

insert into items values (null, 1, 1, 'do homework', default);

insert into items values (null, 1, 1, 'go shopping', default), (null, 1, 1, 'go hyf', default);

insert into items values (null, 1, 2, 'brush your teeth', default), (null, 1, 2, 'go training', default);

insert into items values (null, 1, 3, 'cut your hairs', default), (null, 1, 3, 'go picnic', default);
